<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2196F3"
    tools:context=".DetailsAvtivity">

    <androidx.cardview.widget.CardView
        android:padding="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_det"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@drawable/play"/>


            <TextView
                android:id="@+id/title_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_det"
                android:text="Movie Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/released_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_toRightOf="@+id/image_det"
                android:layout_below="@+id/title_det"
                android:text="Release Date: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_det"
                android:layout_toRightOf="@id/image_det"
                android:layout_below="@id/released_det"
                android:text="Category:"
                android:paddingLeft="5dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_det"
                android:padding="5dp"
                android:layout_toRightOf="@+id/image_det"
                android:layout_below="@id/category_det"
                android:text="Rating:"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/runTime_det"
                android:text="Runtime:"
                android:paddingLeft="5dp"
                android:layout_below="@id/rating_det"
                android:layout_toRightOf="@id/image_det"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/directedBy_det"
           android:text="Directed By:"
           android:paddingLeft="5dp"
           android:layout_below="@+id/image_det"
           android:layout_marginTop="10dp"
           android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:padding="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/actors_det"
                    android:text="Actors:"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/writers_det"
                    android:text="Writers:"
                    android:layout_below="@+id/actors_det"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plot_det"
                    android:text="Plot:"
                    android:padding="5dp"
                    android:layout_below="@+id/writers_det"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boxOffice_det"
                    android:padding="5dp"
                    android:text="Box Office:"
                    android:layout_below="@+id/plot_det"/>



            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>





</LinearLayout>